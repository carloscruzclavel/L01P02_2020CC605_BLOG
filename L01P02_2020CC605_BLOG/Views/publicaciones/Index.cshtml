@model IEnumerable<L01P02_2020CC605_BLOG.Models.publicaciones>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a type="button" class="btn btn-success" asp-action="Create">Crear nueva publicación</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usuarioId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usuarioId)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.publicacionId" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.publicacionId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.publicacionId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
